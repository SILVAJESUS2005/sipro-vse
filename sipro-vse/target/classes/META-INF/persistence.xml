<?xml version="1.0" encoding="UTF-8"?>
<persistence version="3.0"
             xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd">
             
  <persistence-unit name="siproPU" transaction-type="JTA">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <jta-data-source>jdbc/sipro</jta-data-source>

    <class>modelo.Miembro</class>
    <class>modelo.Proyecto</class>
    <class>modelo.Acuerdo</class>
    <class>modelo.PlanProyecto</class>
    <class>modelo.Riesgo</class>
    <class>modelo.Cambio</class>
    <class>modelo.Repositorio</class>
    <class>modelo.RegistroProgreso</class>
    <class>modelo.Reunion</class>
    <class>modelo.EvaluacionProyecto</class>
    <class>modelo.EntregaFinal</class>
    <class>modelo.Documento</class>

    <properties>
      <property name="jakarta.persistence.schema-generation.database.action" value="none"/>
    </properties>
  </persistence-unit>
</persistence>
